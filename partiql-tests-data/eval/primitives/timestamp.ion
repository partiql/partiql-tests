time::[
  {
    name: "time simple",
    statement: "TIME '01:01:01.111111111'",
    assert: {
      evalMode: [EvalModeCoerce, EvalModeError],
      result: EvaluationSuccess,
      output: $time::{ hour: 1, minute: 1, second: 1.111111111, offset: 0 }
    }
  },
]
timez::[
  {
    name: "timez simple",
    statement: "TIME WITH TIME ZONE '01:01:01.111-00:01'",
    assert: {
      evalMode: [EvalModeCoerce, EvalModeError],
      result: EvaluationSuccess,
      output: $time::{ hour: 1, minute: 1, second: 1.111, offset: -1 }
    }
  },
]
timestamp::[
  {
    name: "timestamp simple",
    statement: "TIMESTAMP '2025-01-01 01:01:01'",
    assert: {
      evalMode: [EvalModeCoerce, EvalModeError],
      result: EvaluationSuccess,
      output: $timestamp::{ year: 2025, month: 1, day: 1, hour: 1, minute: 1, second: 1.0, offset: 0 }
    }
  },
]
timestampz::[
  {
    name: "timestampz simple",
    statement: "TIMESTAMP WITH TIME ZONE '2025-01-01 01:01:01.111-00:01'",
    assert: {
      evalMode: [EvalModeCoerce, EvalModeError],
      result: EvaluationSuccess,
      output: $timestamp::{ year: 2025, month: 1, day: 1, hour: 1, minute: 1, second: 1.111, offset: -2 }
    }
  },
]
