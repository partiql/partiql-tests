or::[
  // Basic OR truth table tests
  {
    name: "true OR true",
    statement: "true OR true",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "true OR false",
    statement: "true OR false",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "false OR true",
    statement: "false OR true",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "false OR false",
    statement: "false OR false",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: false
    }
  },
  
  // OR with NULL tests
  {
    name: "true OR NULL",
    statement: "true OR NULL",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "NULL OR true",
    statement: "NULL OR true",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "false OR NULL",
    statement: "false OR NULL",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: null
    }
  },
  {
    name: "NULL OR false",
    statement: "NULL OR false",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: null
    }
  },
  {
    name: "NULL OR NULL",
    statement: "NULL OR NULL",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: null
    }
  },
  
  // OR with MISSING tests
  {
    name: "true OR MISSING",
    statement: "true OR MISSING",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "MISSING OR true",
    statement: "MISSING OR true",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: true
    }
  },
  {
    name: "false OR MISSING",
    statement: "false OR MISSING",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: $missing::null
    }
  },
  {
    name: "MISSING OR false",
    statement: "MISSING OR false",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: $missing::null
    }
  },
  {
    name: "MISSING OR MISSING",
    statement: "MISSING OR MISSING",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: $missing::null
    }
  },
  {
    name: "NULL OR MISSING",
    statement: "NULL OR MISSING",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: null
    }
  },
  {
    name: "MISSING OR NULL",
    statement: "MISSING OR NULL",
    assert: {
      result: EvaluationSuccess,
      evalMode: [EvalModeCoerce, EvalModeError],
      output: $missing::null
    }
  }
